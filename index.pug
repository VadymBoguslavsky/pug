html  
    head
        meta(content="width=device-width, initial-scale=1.0" name="viewport")
        link(href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet")
        link(href='assets/styles/css/normalize.css', rel='stylesheet')
        link(href='assets/styles/css/selectric.css', rel='stylesheet')
        link(href='assets/styles/css/styles.css', rel='stylesheet')
        link(href='assets/styles/css/media.css', rel='stylesheet')
        title Zet
    body

        section.wrapper
            div.main__wrapper 
              div.form__wrapper
                div.logo
                  img(src="assets/bg/logo.png", alt="")
                .text
                  p.upper__text  Welcome bonus
                  p.lower__text 100% up to €500
                  p.plus__text +200 free spins
                form.form(id="regForm")
                  .tab
                    p.step Step 1/2
                      input.focus(type="email" name="email" placeholder="Email")
                      input.focus(type="text" name="login" placeholder="Login")
                      input(type="password" name="password" placeholder="Password")
                      select.currency
                        option(value="1" selected  disabled="disabled" hidden="hidden") Currency
                        option(value="2") Currency
                      fieldset
                        legend.promolabel.focus(for="promocode") Promocode
                        input.promocode.focus(type="promocode" id="promocode" name="promocode" value="BIG WIN")
                      label.check
                        span I accept 
                        a.terms Terms&Conditions
                        input.checkbox(type="checkbox" checked="checked")
                        span.mark
                      label.check I consent to receiving exclusive bonuses and promotions by email
                        input.checkbox(type="checkbox" checked="checked")
                        span.mark
                      label.check I consent processing of my personal data 
                        input.checkbox(type="checkbox" checked="checked")
                        span.mark
                      .btn
                        button.nextbtn(type="button"  id="nextBtn") NEXT STEP  
                  .tab
                    p.step Step 2/2
                    div.left_form
                      input.name.focus(type="text" name="name" placeholder="Name")
                      input.birthday.focus(type="number" name="day" placeholder="DD" min="1" max="31")
                      input.birthday.focus(type="number" name="month" placeholder="MM" min="1" max="12")
                      input.birthday.focus(type="number" name="year" placeholder="YY" min="1900" max="2018")
                      input.city.focus(type="text" name="city" placeholder="City")
                      input.address.focus(type="text" name="address" placeholder="Address")
                    div.right_form
                      input.last__name.focus(type="text" name="last__name" placeholder="Last Name")
                      select.country__select
                        option(value="1" selected  disabled="disabled" hidden="hidden") County
                        option(value="2") Country
                      input.postcode.focus(type="text" name="postcode" placeholder="Postcode")
                      div.phone
                        select.code__select
                          option(value="1" selected  disabled="disabled" hidden="hidden") +3 80
                      input.phone__number.focus(type="number" name="postcode" placeholder="_ _ _ _")
                    .radio
                      label.container Male
                        input(type="radio" checked="checked" name="radio")
                        span.checkmark
                      label.container Female
                        input(type="radio" name="radio")
                        span.checkmark
                    .buttons
                      button.back(type="button" id="prevBtn") Back
                      button.submit(type="submit") Registration     
